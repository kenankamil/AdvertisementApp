@model UserCreateModel
@{
    Layout = "_Layout";
}

<div class="container">

    <form asp-action="SıgnUp" asp-controller="Account" method="post">
        <div class="form-row">
            <div class="form-group">
                <label>First Name</label>
                <input asp-for="@Model.Firstname" class="form-control">
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <input asp-for="@Model.Surname" class="form-control">
            </div>
            <div class="form-group">
                <label>User Name</label>
                <input asp-for="@Model.Username" class="form-control">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" asp-for="@Model.Password" class="form-control">
            </div>
            <div class="form-group">
                <label>Confirm Password</label>
                <input type="password" asp-for="@Model.ConfirmPassword" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label>Phone Number</label>
                <input class="form-control" asp-for="@Model.PhoneNumber">
            </div>
            <div class="form-group col-md-6">
                <label>Gender</label>
                <select class="form-control" asp-items="@Model.Genders" asp-for="@Model.GenderId">
                    <option value="0">Choose...</option>
                </select>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Sign Up</button>
        <div class="text-danger" asp-validation-summary="All"></div>
    </form>

</div>
